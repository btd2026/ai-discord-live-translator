# Rename this file to .env and fill in your keys.

# Discord bot token
BOT_TOKEN=your_discord_bot_token_here

# OpenAI API key (used for transcription)
OPENAI_API_KEY=sk-...

# Tuning (optional)
# Lower = faster cut after silence (can make captions choppier)
SILENCE_MS=300

# Smaller chunks = faster transcripts (but choppier)
MIN_CHUNK_MS=500
MAX_CHUNK_MS=900

# Interim translation controls
# Enable a lightweight, debounced interim translation line in logs and optional overlay updates
INTERIM_TRANSLATION_ENABLED=true
INTERIM_TRANSLATION_DEBOUNCE_MS=200
INTERIM_TRANSLATION_MAXLEN=300
