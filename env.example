# Discord Bot Configuration
BOT_TOKEN=your_discord_bot_token_here

# Deepgram API Configuration
DEEPGRAM_API_KEY=dg_your_deepgram_secret_key_here

# WebSocket Configuration
WS_PORT=7071

# Deepgram Model Settings
DG_MODEL=nova-3
DG_LANGUAGE=auto
DG_SMART_FORMAT=true
DG_INTERIM_RESULTS=true
DG_ENDPOINTING_MS=1200
DG_PROFANITY_FILTER=false
DG_UTTERANCE_SPLIT=false
DG_NUMERALS=true
DG_FILLER_WORDS=false
DG_DIARIZE=false

# Voice Capture Settings
SILENCE_MS=1200

# Translation Settings (disabled by default)
TRANSLATE=false
TARGET_LANG=en
TRANSLATE_MODEL=gpt-4o-mini

# Text Cleanup Settings
CLEANUP_ENABLE=true
CLEANUP_MODEL=gpt-4o-mini
CLEANUP_MAXTOKENS=120
CLEANUP_TIMEOUT_MS=1500
